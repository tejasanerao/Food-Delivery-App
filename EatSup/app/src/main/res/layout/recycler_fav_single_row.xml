<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:layout_margin="6dp"
    app:cardCornerRadius="6dp">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:background="#f9ebff">

        <LinearLayout
            android:id="@+id/LlFavcontent"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal"
            android:weightSum="6">

            <ImageView
                android:id="@+id/imgFavRestImage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/logo4"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.8">

                <TextView
                    android:id="@+id/txtFavRestName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginTop="12dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:text="List Item"/>

                <TextView
                    android:paddingLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/txtFavPerPrice"
                    android:textSize="18sp"
                    android:drawableLeft="@drawable/ic_rupee"
                    android:layout_below="@+id/txtFavRestName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/person"
                    android:textSize="18sp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/txtFavPerPrice"
                    android:layout_below="@id/txtFavRestName"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2">
                <ImageView
                    android:id="@+id/imgFavFav"
                    android:layout_margin="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_favtrue"/>

                <TextView
                    android:layout_alignParentRight="true"
                    android:id="@+id/txtFavRestRating"
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5.0"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/imgFavFav"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#ffcc00"/>

            </RelativeLayout>



        </LinearLayout>



    </RelativeLayout>

</androidx.cardview.widget.CardView>